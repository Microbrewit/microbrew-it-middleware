doctype html
html(lang='en', ng-app='Microbrewit')
	head
		base(href='/')
		meta(charset='utf-8')
		title #{title}
		link(rel='icon', type='image/png', href='./images/favicon.png')
		link(rel='stylesheet', href='css/main.css')
		meta(name='viewport', content='width=device-width, initial-scale=1.0, maximum-scale=1.0, target-densitydpi=medium-dpi, user-scalable=1')
	body
		nav#main-navigation
			ul
				li.logo-text
					a(href="/" class=navigationState === 'home' ? 'active':'') Microbrew.it
				li
					a(href='/add', class=navigationState === 'recipe' ? 'active':'') Add new recipe
				li
					a(href='/beer', class=navigationState === 'beer' ? 'active':'') Beer
				li
					a(href='/breweries', class=navigationState === 'breweries' ? 'active':'') Breweries
				li
					a(href='brewers', class=navigationState === 'brewers' ? 'active':'') Brewers
				li
					a(href='ingredients', class=navigationState === 'ingredients' ? 'active':'') Ingredients
				li
					a(ui-sref='search', class=navigationState === 'search' ? 'active' : '') Search
				
				if user
					li.right
						a(href='/account/settings', class=navigationState === 'account' ? 'active':'')
							gravatar(url='#{user.gravatar}', size='20px', style='display: inline-block;margin-right: 5px;')
							| #{user.username}
				else
					li.right(ng-if='!user.username')
						a(ui-sref='user.login', class=navigationState === 'login' ? 'active':'') Login