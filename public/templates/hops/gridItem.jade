.grid-item.search-grid-item
	a.content(href='hops/#{item.hopId}')
		.top-circle
			mb-colour-box.colour-box(absolutecolour='0,128,64', size='50px')
			img(src='images/hops-large.png', width='50', height='50', alt='Hop')
		h3 #{item.name}
		.type Hop
		.meta
			.meta-table
				.meta-cell #{item.aaLow} - #{item.aaHigh}% AA
				.meta-cell #{item.betaLow} - #{item.betaHigh}% Beta