.inner-wrapper
	section.meta-info
		.inner-wrapper
			.meta-bubble
				span(class='value' title="") #{item.beers.length}
				span.label Beers
			.meta-bubble
				span(class='value' title="") #{item.members.length}
				span.label Brewers
			.meta-bubble
				span(class='value minibubble' title="" style="background: url('#{country.getImageByName(item.origin.name)}') center center !important;background-size: 152%;width: 25px;height:25px;border-radius:50%;")
				span.label #{item.origin.name}
			if item.socials
				if item.socials.twitter
					a.meta-bubble(href="#{item.socials.twitter}" title="#{item.name} on Twitter")
						span(class='value minibubble' title="" style="background: url('https://logo.clearbit.com/twitter.com?size=25') center center !important;width: 25px;height:25px;border-radius:50%;")
						span.label Twitter
				if item.socials.facebook
					a.meta-bubble(href="#{item.socials.facebook}" title="#{item.name} on Facebook")
						span(class='value minibubble' title="" style="background: url('https://logo.clearbit.com/facebook.com?size=25') center center !important;width: 25px;height:25px;border-radius:50%;")
						span.label Facebook
				if item.socials.untappd
					a.meta-bubble(href="#{item.socials.untappd}" title="#{item.name} on Untappd")
						span(class='value minibubble' title="" style="background: url('https://logo.clearbit.com/untappd.com?size=25') center center !important;width: 25px;height:25px;border-radius:50%;")
						span.label Untappd
				if item.socials.ratebeer
					a.meta-bubble(href="#{item.socials.ratebeer}" title="#{item.name} on RateBeer")
						span(class='value minibubble' title="" style="background: url('https://logo.clearbit.com/ratebeer.com?size=25') center center !important;width: 25px;height:25px;border-radius:50%;")
						span.label RateBeer
				if item.socials.brewerydb
					a.meta-bubble(href="#{item.socials.brewerydb}" title="#{item.name} on BreweryDB")
						span(class='value')
						span.label BreweryDB
if subnav
	include ../../subnavigation.jade
if item.description
	.inner-wrapper
		h2 About #{item.name}
		.description !{item.description}

if item.beers.length > 0 || item.members.length > 0
	section.the-content
		
		if item.beers.length > 0
			.the-list(id='beer')
				h2 Beers
				.inner-wrapper
					if item.beers.length > 0
						ul.search-grid-results
							each result in item.beers
								li
									include ../beers/gridItem.jade

		if item.members.length > 0
			.the-list(id='brewers')
				h2 Brewers
				.inner-wrapper
					if item.members.length > 0
						ul.search-grid-results
							each result in item.members
								li
									include ../users/gridItem.jade