.grid-result.search-grid-result
	a.content(href='breweries/#{result.breweryId}')
		.top-circle
			gravatar(url='#{result.gravatar}}', size='50px')
		h3 #{result.name}
		.type #{result.type}
		.meta
			.meta-table
				if result.beers
					.meta-cell #{result.beers.length} Beers
				if result.members
					.meta-cell #{result.members.length} Brewers