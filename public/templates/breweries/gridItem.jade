.grid-result.search-grid-result
	a.content(href='breweries/#{result.breweryId}')
		.top-circle
			if result.avatar !== null
				span(class='minibubble' style="display:inline-block;width:50px;height:50px;padding:0;margin:0;border-radius:50%;border:1px solid rgba(0,0,0,0.2);background: url('http://img.microbrew.it/#{result.avatar}') center center;background-color: #333;background-size: cover;")
			else if result.origin.name !== "Unkown"
				span(class='minibubble' style="display:inline-block;width:50px;height:50px;padding:0;margin:0;border-radius:50%;border:1px solid rgba(0,0,0,0.2);background: url('#{country.getImageByName(result.origin.name)}') center center;background-size: 152%;")
			else
				span(class='minibubble' style="display:inline-block;width:50px;height:50px;padding:0;margin:0;border-radius:50%;border:1px solid rgba(0,0,0,0.2);background: url('/random/#{result.name}?size=50') center center;background-color: #333;background-size: contain;")
		h3 #{result.name}
		.type #{result.type}
		.meta
			.meta-table
				if result.beers
					.meta-cell #{result.beers.length} Beers
				if result.members
					.meta-cell #{result.members.length} Brewers