if headline && headline.minidisplay
	.minidisplay-wrapper
		| by
		br
		each result in item.brewers
			if result.dataType === 'user'
				include ../users/minidisplay.jade
include ../../subnavigation.jade
section.recipe.the-content
	section.mash.steps
		.inner-wrapper
			h2 Mash
			ul
				each step in item.recipe.mashSteps
					li.step-wrapper(title="Mash step")
						.step-number #{step.stepNumber}
						.step-meta #{step.volume} liters for #{step.length} minutes at #{step.temperature} celcius

						include recipeStep.jade
	section.boil.steps
		.inner-wrapper
			h2 Boil
			ul
				each step in item.recipe.boilSteps
					li.step-wrapper
						.step-number #{step.stepNumber}
						.step-meta
							span.step-type
							span.values
								label(for='length') Add at #{step.length} minutes
						include recipeStep.jade
	if item.recipe.fermentationSteps.length > 0
		section.fermentation.steps
			.inner-wrapper
				h2 Fermentation
				ul
					each step in item.recipe.fermentationSteps
						li.step-wrapper
							.step-number #{step.stepNumber}
							.step-meta
								span.step-type
								span.values
									label(for='length') Duration #{step.length} days
									label(for='length') Temperature #{step.temperature} celcius
							include recipeStep.jade
